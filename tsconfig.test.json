{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "ES2020", "ES2017", "ES2016", "ES2015", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Test-specific types - Include Vitest and Testing Library types */
    "types": ["@testing-library/jest-dom", "vitest/globals", "node"],
    "forceConsistentCasingInFileNames": true,

    /* Path mappings - same as production */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/services/*": ["./src/services/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* Linting - Slightly more lenient for tests */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": false,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Allow more flexible typing for test utilities */
    "suppressImplicitAnyIndexErrors": false,
    "noImplicitOverride": false
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/__tests__/**/*",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.spec.ts",
    "tests/**/*.spec.tsx",
    "src/test-setup.ts",
    "tests/utils/**/*",
    "test-setup/global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "build", "android", "ios", ".next"]
}
