# Development Environment Configuration
NODE_ENV=development
VITE_APP_ENV=development
VITE_APP_VERSION=2.0.0-dev

# Database
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_dev_anon_key

# Analytics & Monitoring (Development)
VITE_POSTHOG_KEY=phc_dev_key_here
VITE_POSTHOG_HOST=https://app.posthog.com
VITE_SENTRY_DSN=https://dev@sentry.io/project
VITE_SENTRY_ENVIRONMENT=development

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_ENDPOINT=http://localhost:3001/api/performance
VITE_ANALYTICS_ENDPOINT=http://localhost:3001/api/analytics

# Feature Flags (Development)
VITE_ENABLE_SESSION_RECORDING=false
VITE_ENABLE_HEATMAPS=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_VOICE_SYNTHESIS=true

# Development Settings
VITE_APP_DOMAIN=localhost:3000
VITE_API_BASE_URL=http://localhost:3001
VITE_ENABLE_HTTPS=false
VITE_DEV_SERVER_PORT=3000
VITE_DEV_MOCK_API=false
VITE_DEV_ENABLE_HMR=true
VITE_DEV_SOURCE_MAPS=true

# Performance Thresholds (Relaxed for dev)
VITE_PERFORMANCE_LCP_THRESHOLD=4000
VITE_PERFORMANCE_FID_THRESHOLD=200
VITE_PERFORMANCE_CLS_THRESHOLD=0.2
VITE_PERFORMANCE_MEMORY_THRESHOLD=100

# Build Settings
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAPS=true
VITE_BUILD_MINIFY=false