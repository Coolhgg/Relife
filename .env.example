# Environment Configuration for Relife Smart Alarm
# Copy this file to .env.local and configure your values

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
NODE_ENV=development
VITE_APP_ENV=development
VITE_APP_VERSION=2.0.0
VITE_BUILD_TIME=2025-01-15T12:00:00Z

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# PostHog Analytics
VITE_POSTHOG_KEY=your_posthog_key_here
VITE_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Monitoring
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ORG=your_sentry_org
VITE_SENTRY_PROJECT=your_sentry_project

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_ENDPOINT=/api/performance
VITE_ANALYTICS_ENDPOINT=/api/analytics

# ===========================================
# FEATURE FLAGS
# ===========================================
VITE_ENABLE_SESSION_RECORDING=false
VITE_ENABLE_HEATMAPS=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_VOICE_SYNTHESIS=true

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
VITE_APP_DOMAIN=localhost:3000
VITE_API_BASE_URL=http://localhost:3000
VITE_CDN_URL=

# ===========================================
# SECURITY SETTINGS
# ===========================================
VITE_ENABLE_HTTPS=false
VITE_CSRF_TOKEN=
VITE_RATE_LIMIT_ENABLED=false

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================

# Web Push Notifications (VAPID)
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@domain.com

# Mobile Push Notifications (Firebase/FCM)
VITE_FIREBASE_CONFIG={}
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here

# Email Campaign Service (ConvertKit)
CONVERTKIT_API_KEY=your_convertkit_api_key_here
CONVERTKIT_API_SECRET=your_convertkit_secret_here
CONVERTKIT_WEBHOOK_SECRET=your_webhook_secret_here

# Notification Security
NOTIFICATION_SIGNING_KEY=your_notification_signing_key_here
NOTIFICATION_ENCRYPTION_KEY=your_32_byte_encryption_key_here
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# Smart Timing & Personalization
SMART_TIMING_ENABLED=true
QUIET_HOURS_START=22:00
QUIET_HOURS_END=07:00
BATTERY_OPTIMIZATION=true
LOCATION_AWARENESS=true

# Emotional Intelligence AI
EMOTIONAL_AI_ENABLED=true
SENTIMENT_ANALYSIS_ENDPOINT=your_ai_endpoint_here
EMOTIONAL_PROFILE_UPDATES=true

# Advanced Security Features
NOTIFICATION_SIGNATURE_VALIDATION=true
NOTIFICATION_REPLAY_PROTECTION=true
SUSPICIOUS_SENDER_BLOCKING=true
TRUST_SCORING_ENABLED=true

# ===========================================
# MONITORING & ALERTING
# ===========================================
# External Monitoring Services
VITE_DATADOG_CLIENT_TOKEN=
VITE_NEW_RELIC_ACCOUNT_ID=
VITE_AMPLITUDE_API_KEY=

# Health Check & Uptime Monitoring
VITE_HEALTH_CHECK_INTERVAL=60000
VITE_UPTIME_ROBOT_KEY=

# Performance Thresholds
VITE_PERFORMANCE_LCP_THRESHOLD=2500
VITE_PERFORMANCE_FID_THRESHOLD=100
VITE_PERFORMANCE_CLS_THRESHOLD=0.1
VITE_PERFORMANCE_MEMORY_THRESHOLD=50

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
VITE_DEV_SERVER_PORT=3000
VITE_DEV_MOCK_API=false
VITE_DEV_ENABLE_HMR=true
VITE_DEV_SOURCE_MAPS=true

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================
# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
# Use test keys for development (pk_test_... and sk_test_...)
# Use live keys for production (pk_live_... and sk_live_...)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Payment Processing Settings
VITE_STRIPE_ENABLED=true
VITE_PAYMENT_CURRENCY=usd
VITE_PAYMENT_SUCCESS_URL=/payment/success
VITE_PAYMENT_CANCEL_URL=/payment/cancel

# ===========================================
# BUILD SETTINGS
# ===========================================
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAPS=false
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2020